// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

// You are explicitly telling the prisma generate command to skip placing the generated client code inside the standard node_modules/.prisma/client directory. Instead, it places the code within your project structure at ../lib/generated/prisma.

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
// adding urls here also as for runtime prisma client instance will take it from here because we have not added in its config with datasource property.

// Resource Model
model Resource {
  id String @id @default(cuid())

  // Basic Information
  title String
  url String
  description String? @db.Text

  // Categorization
  category Category
  type ResourceType
  tags String[] @default([])

  // AI Generated Content
  aiSummary String? @db.Text
  aiKeyPoints String[] @default([])
  aiSkillLevel  String?   // "Beginner", "Intermediate", "Advanced"
  aiEstimatedTime String? // "2 hours", "1 week", etc.

  // User Relationship (Clerk user ID)
  userId String

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Indexes for performance
  @@index([userId])
  @@index([category])
  @@index([type])
  @@index([userId, category])
  @@index([userId, type])
}

// Category Enum
enum Category {
  AI_TOOLS
  DATA_SCIENCE
  STOCK_MARKET
  PERSONAL_FINANCE
  BUSINESS_PRODUCTIVITY
  WEB_DEVELOPMENT
  OTHER
}

// Resource Type Enum
enum ResourceType {
  VIDEO
  ARTICLE
  BOOK
  PODCAST
  DOCUMENTATION
}